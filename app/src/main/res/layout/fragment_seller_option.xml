<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SecondaryColor"
    tools:context="com.brandtechnosolutions.petbaazar.SellerOptionFragment">


    <TextView
        android:id="@+id/image_taker_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:layout_marginTop="46dp"
        android:gravity="center_horizontal"
        android:text="What do you want to do?"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/picture_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_taker_text_id"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/dialog_button"
        android:text="Open Camera"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/gallery_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/picture_id"
        android:layout_alignBottom="@+id/picture_id"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity=""
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/dialog_button"
        android:text="Open Gallery"
        android:textColor="@android:color/white" />
</RelativeLayout>
