<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_take_ad_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brandtechnosolutions.petbaazar.TakeAdInfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/PrimaryColor"
        android:focusableInTouchMode="true"
        app:popupTheme="@style/PopupOverlay" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="13dp"
        android:text="Post Free Ad"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="25dp"
        android:text="Select Category"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textView8"
        android:layout_marginTop="5dp"
        android:background="@color/PrimaryColor" />

    <Spinner
        android:id="@+id/pet_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/other_pet_edit_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Pet Type"
        android:visibility="gone" />
    <!--<EditText-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:visibility="gone"-->
    <!--android:hint="Enter Pet Type"-->
    <!--android:layout_marginRight="30dp"-->
    <!--android:id="@+id/other_breed_edit_text_id"-->
    <!--android:layout_below="@+id/textView10"-->
    <!--android:layout_alignLeft="@+id/textView10"-->
    <!--android:layout_alignStart="@+id/textView10" />-->
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="25dp"
        android:text="Select Pet Breeds"
        android:textColor="@android:color/black"

        android:textSize="16sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relative_spinner_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textView10"
        android:layout_marginTop="5dp"
        android:background="@color/PrimaryColor"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="10dp"
        android:visibility="gone" />
    <!--<RelativeLayout-->
    <!--android:layout_below="@id/type_spinner"-->
    <!--android:background="@color/PrimaryColor"-->
    <!--android:layout_marginTop="5dp"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"/>-->
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/type_spinner"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter Ad title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_below="@+id/editText2"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Ad Description"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_below="@+id/editText3"
        android:layout_marginRight="30dp"
        android:layout_marginTop="24dp"
        android:onClick="onOk"
        android:text="Ok" />


</RelativeLayout>
</ScrollView>
